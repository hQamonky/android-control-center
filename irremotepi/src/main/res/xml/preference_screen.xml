<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_header">

        <EditTextPreference
            app:key="host_ip"
            app:title="@string/settings_host_title"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="port"
            app:title="@string/settings_port_title"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="factory_reset"
            app:title="@string/factory_reset_dialog_title"
            app:summary="@string/settings_factory_reset_summary_message"/>

    </PreferenceCategory>

</PreferenceScreen>